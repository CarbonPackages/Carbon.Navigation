prototype(Carbon.Navigation:LogoTag) < prototype(Neos.Fusion:Tag) {
    href = Neos.Neos:NodeUri {
        node = ${site}
    }
    @context.href = ${this.href}

    tagName = ${this.href ? 'a' : 'span'}
    content = ${node.context.currentSite.name}
    attributes {
        class = 'logo-element'
        href = ${href}
    }
}
